<div  class="m-auto mt-4" style="max-width: 360px">
  <h2 class="text-2xl text-center font-avenir-next-bold">Sign up</h2>

  <%= form_for @user do |form| %>
    <%= render partial: '/users/form', object: form %>

    <div class="submit-field mt-8">
      <%= form.submit "Log in", class: "font-avenir-next-bold uppercase bg-navy text-white text-xs py-3 px-6 w-full tracking-widest" %>
    </div>

    <div class="other-links mt-4">
      <%= link_to t(".sign_in"), log_in_path, class: "hover:text-blue-500" %>
    </div>
  <% end %>
</div>
