<div class="sm:justify-between sm:items-center sm:flex">
  <h1 class="text-2xl font-avenir-next-bold">Groups List</h1>
  <%= link_to 'New Group', new_group_path, class: "block mt-4 lg:inline-block text-indigo-500 mr-4 sm:mt-0 hover:text-blue-500" %>
</div>

<div class="mt-6 overflow-x-auto">
  <table class="table-auto md:table-fixed w-full">
    <thead>
      <tr class="text-left">
        <th class="border w-1/3 px-4 py-2">Name</th>
        <th class="border w-1/2 sm:w-1/3 px-4 py-2">Url</th>
        <th class="border w-1/2 sm:w-1/3 px-4 py-2">Enable Payment</th>
        <th class="border w-1/3 px-4 py-2">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @groups.each do |group| %>
        <tr>
          <td class="border px-4 py-2"><%= group.name %></td>
          <td class="border px-4 py-2 text-indigo-500"><%= link_to group.url, signup_identity_url(group.url) %></td>
          <td class="border px-4 py-2"><%= group.enable_payment ? "Yes" : "No" %></td>
          <td class="border px-4 py-2">
            <%= link_to "Edit", edit_group_path(group), class: "mr-4" %>
            <%= link_to(
              "Delete",
              group_path(group.id),
              method: :delete,
              class: "",
              title: "Delete Group",
              data: { confirm: "Are you sure you want to continue?" }
            ) %>

          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
