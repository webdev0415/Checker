<% menu_item_class = "block px-4 py-2 text-sm leading-5 text-gray-700 hover:bg-gray-100 hover:text-gray-900 focus:outline-none focus:bg-gray-100 focus:text-gray-900" %>

<div class="relative inline-block text-left">
  <div>
    <span class="shadow-sm">
      <button type="button" class="dropdown inline-flex justify-center w-full bg-white text-sm leading-5 font-medium text-gray-700 hover:text-gray-500 focus:outline-none focus:border-blue-300 focus:shadow-outline-blue active:bg-gray-50 active:text-gray-800 transition ease-in-out duration-150" id="options-menu" aria-haspopup="true" aria-expanded="true">
        <%= current_user.email %>
        <svg class="-mr-1 ml-2 h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd" />
        </svg>
      </button>
    </span>
  </div>
  <div class="dropdown-items origin-top-right absolute right-0 mt-4 w-56 shadow-lg hidden">
    <div class="bg-white shadow-xs" role="menu" aria-orientation="vertical" aria-labelledby="options-menu">
      <div class="py-1">
        <% if current_user.admin? || current_user.superadmin? %>
          <%= link_to "Dashboard", admin_dashboard_path, class: menu_item_class, role: "menuitem" %>
        <% end %>
        <% if current_user.organization? %>
          <%= link_to "Groups", groups_path, class: menu_item_class, role: "menuitem" %>
          <%= link_to "Identities", identities_path, class: menu_item_class, role: "menuitem" %>
        <% end %>
        <% if current_user.investigator? %>
          <%= link_to "Organizations", investigator_index_path, class: menu_item_class, role: "menuitem" %>
        <% end %>
        <%= link_to "Settings", root_path, class: menu_item_class, role: "menuitem" %>
      </div>
      <div class="border-t border-gray-100"></div>
      <div class="py-1">
        <%= link_to(
          'Logout',
          log_out_path,
          class: menu_item_class,
          method: :delete
        )%>
      </div>
    </div>
  </div>
</div>
